{
  "name": "@edtech/api",
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "tsx watch --env-file=.env --no-deprecation -r tsconfig-paths/register src/index.ts",
    "build": "tsc && tsc-alias -p tsconfig.json",
    "prisma:migration": "npx prisma migrate dev --name init",
    "prisma:seed": "tsx prisma/seeds/seed.ts",
    "prisma:migration:prod": "npx prisma migrate deploy",
    "prisma:generate": "npx prisma generate",
    "prisma:studio": "npx prisma studio"
  },
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "@types/cors": "^2.8.17",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.0.1",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.5.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@tsconfig/recommended": "^1.0.8",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.10",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "tsc-alias": "^1.8.11",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  }
}
